{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; connect-src 'self' https://api.github.com; img-src 'self' data: https:; script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'" }
      ]
    }
  ],
  "redirects": [
    { "source": "/docs", "destination": "https://docs.alloy.fyi/", "permanent": true },
    { "source": "/docs/:path*", "destination": "https://docs.alloy.fyi/:path*", "permanent": true },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "docs.alloy.fyi" }],
      "destination": "https://lydakis.github.io/alloy/:path*",
      "permanent": true
    }
  ]
}
